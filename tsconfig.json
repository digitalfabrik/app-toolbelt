{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true
  }
}
