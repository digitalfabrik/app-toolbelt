{
  "ts-node": {
    "esm": false // Should be changed to true once stable
  },
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "CommonJS", // Should be changed to ES2020 once stable
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true
  }
}
